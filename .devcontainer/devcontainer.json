// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"TZ": "${localEnv:TZ:Australia/Brisbane}",
			"CLAUDE_CODE_VERSION": "latest",
			"GIT_DELTA_VERSION": "0.18.2",
			"ZSH_IN_DOCKER_VERSION": "1.2.0"
		}
	},
	"containerEnv": {
	    "NODE_OPTIONS": "--max-old-space-size=4096",
		"CLAUDE_CONFIG_DIR": "/home/vscode/.claude",
		"POWERLEVEL9K_DISABLE_GITSTATUS": "true"
	},
	"remoteUser": "vscode",
	"workspaceFolder": "/workspace",
	"mounts": [
		"source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
		"source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
		"source=claude-code-config-${devcontainerId},target=/home/vscode/.claude,type=volume"
	],
	"runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW"],
  	// Forward ports for web development
  	"forwardPorts": [3000, 3001, 8000, 8080, 5173, 4200],
  	// Auto-forward ports (VS Code will detect and forward automatically)
  	"portsAttributes": {
    	"3000": {
      		"label": "Next.js App",
      		"onAutoForward": "notify"
    	},
    	"3001": {
      		"label": "Next.js Dev Server",
      		"onAutoForward": "notify"
    	}
  	},
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "python -m venv .venv && .venv/bin/pip install --upgrade pip && if [ -f requirements.txt ]; then .venv/bin/pip install -r requirements.txt; fi",
	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.flake8",
				"ms-python.black-formatter",
				"streetsidesoftware.code-spell-checker"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "bash",
						"icon": "terminal-bash"
					},
					"zsh": {
						"path": "zsh"
					}
				}
			}
		}
	}
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
